@import '../../style/colors.styl'
@import url('https://fonts.googleapis.com/css2?family=Manrope&family=Roboto:wght@400;500;700&display=swap')

Manrope = 'Manrope', sans-serif

.table-style {
  margin-top: 10px;
  display: block;
  align-items: flex-start;
  justify-content: flex-start;
  margin-left: auto;
  margin-right: auto;
  font-weight: normal;
  background-color: background-contrast !important;
  color: disabled-text !important;
  font-family: 'Manrope', sans-serif;
}

.table-style:act

// itens inside toggles
.table {
  color: #708090 !important;
  text-align: justify;
}

.page-item.disabled .page-link {
  background-color: black !important;
  border-color: #dee2e6;
}

.page-item.active .page-link {
  background-color: black !important;
  border-color: white !important;
}

.customPagination.pagination {
  margin-left: 100vh;
  border-radius: 55%;
}

@media screen and (max-width: 920px) {
  .customPagination.pagination {
    margin-left: 0vh;
  }
}

.table.b-table > tbody > .table-active, .table.b-table > tbody > .table-active > th, .table.b-table > tbody > .table-active > td {
  color: primary !important;
}

.table.b-table tr {
  .btn-actions {
    border-radius: 100%;
    width: 30px;
    height: 30px;
    text-align: center;
    padding: 3px;
    display: inline-block;
  }

  .action {
    opacity: 0;
    transition: 0.3s;
  }

  &:hover {
    .action {
      opacity: 1;
    }
  }
}

.text-position {
  display: flex;
  justify-content: space-around;
}